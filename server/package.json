{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "ts-node tools/copyAssets",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc copy-assets",
    "build-dev": "npm-run-all tsc",
    "start": "nodemon dist/index.js",
    "start-debug": "node dist/index.js",
    "dev:start": "npm-run-all build-dev start",
    "dev": "nodemon --watch src -e ts,json,jsonc --exec npm run dev:start",
    "dev:debug": "npm-run-all build-dev start-debug",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'"
  },
  "keywords": [],
  "author": "Rastislav Škultéty <rskultety@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "cookie-parser": "^1.4.5",
    "debug": "^2.6.9",
    "express": "^4.17.1",
    "node-ipc": "^10.0.2",
    "strip-json-comments": "^3.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.2.3",
    "@types/node-ipc": "^9.1.5",
    "@types/shelljs": "^0.8.9",
    "@types/uuid": "^8.3.1",
    "chai": "^4.3.4",
    "mocha": "^9.0.2",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
}
